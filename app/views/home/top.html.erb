<div class="container">

  <div class="row">
    <h1>Welcome to<span class="glyphicon glyphicon-book"></span>Bookers !!</h1>
    <p>In <span class="glyphicon glyphicon-book"></span>Bookers,<br>
    you can share and exchange your opinions , inpressions , and emotions<br>
    about various books!</p>
  </div>

  <div class="row">
    <% if user_signed_in? %>
      <%= link_to "Log in", user_path(current_user), class:"btn btn-info btn-block btn-base-1 mt-20" %>
      <%= link_to "Sign Up", user_path(current_user), class:"btn btn-success btn-block btn-base-1 mt-20" %>
    <% else %>
      <%= link_to "Log in", new_user_session_path, class:"btn btn-info btn-block btn-base-1 mt-20" %>
      <%= link_to "Sign Up", new_user_registration_path, class:"btn btn-success btn-block btn-base-1 mt-20" %>
    <% end %>
  </div>

</div>