

    <%= render 'layouts/form', user: @current_user ,book: @book %>
     <div class="col-xs-9">
      <div class="top-title">
    <h1>Books</h1>
  </div>

  <table class="table">
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>

    <tbody>
      <% @books.each do |book| %>
         <tr>
      <td><%= link_to user_path(book.user_id) do %>
         <%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", style: "width: 100px; height: 100px; margin-top: 20px;" %>
         <% end %></td>           
         <td><%= link_to book.title, book_path(book.id) %></td>
           <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>

  </table>



</div>
