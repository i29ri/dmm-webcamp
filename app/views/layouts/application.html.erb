<!DOCTYPE html>
<html lang="ja">
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <div class="container" style="background-color: black; color: white;">

      <h4 class="nav navbar-nav navbar-left">Bookers</h4>
        <% if user_signed_in? %>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <%= link_to "Home", user_path(current_user.id), class: "glyphicon glyphicon-home" %>
            </li>
            <li>
              <%= link_to "Users", users_path, class: "glyphicon glyphicon-eye-open" %>
            </li>
            <li>
              <%= link_to "Books", books_path, class: "glyphicon glyphicon-paperclip" %>
            </li>
            <li>
              <%= link_to "logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %>
            </li>
          </ul>

          <% else %>
            <ul class="nav navbar-nav navbar-right">
              <li class="">
                  <%= link_to 'Home', "/", class: "glyphicon glyphicon-home" %>
                </li>
                <li class="">
                  <%= link_to 'About', home_about_path, class: "glyphicon glyphicon-eye-open" %>
                </li>
                <li class="">
                  <%= link_to "Sign up", new_user_registration_path, class: "glyphicon glyphicon-hand-right" %>
                </li>
                <li class="">
                <%= link_to "login", new_user_session_path, class: "glyphicon glyphicon-log-in" %>
              </li>
            </ul>

        <% end %>
      </div>
    </header>

    <main>
    <% flash.each do |message_type, message| %>
      <%= content_tag(:div, message, class: message_type) %>
    <% end %>

    <div class="container">
      <%= yield %>
      </div>
    </main>
    <footer>

      <p class="text-right">CopyRight Infratop.inc</p>

    </footer>

  </body>
</html>
