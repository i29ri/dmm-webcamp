<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@book, local:true do |f| %>
  <div class="form-group has-icon">
    <label class="control-label sr-only" for="inputEmail">Title</label>
    <%= f.text_field :title, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
    <label class="control-label sr-only" for="inputEmail">Opinion</label>
    <%= f.text_field :body, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
  </div>
  <%= f.submit "Update Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>

<%= link_to "Show",book_path %>
<%= link_to "Back",books_path %>

