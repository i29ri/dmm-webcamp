  <%= render 'layouts/form', user: @user ,book: @book_new %>
 <div class="col-xs-9">
 <p id="notice">
  <h1>Book detail</h1>

<table class="table">



  <tbody>
       <tr>
           
           
        <td><%= link_to user_path(@book.user_id) do %>
         <%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg", style: "width: 100px; height: 100px; margin-top: 20px;" %>
         <% end %></td>
         
         
         <td><%= link_to @book.title, book_path(@book.id) %></td>
         
         <td><%= @book.body %></td>
         <% if @book.user == current_user %>
           <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-default btn-block" %></td>
           <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-default btn-block" %></td>
         <% end %>

      </tr>
  </tbody>

  </table>
  <%= link_to @book.user.name, user_path(@book.user_id) %>


</div>
 </div>
</div>